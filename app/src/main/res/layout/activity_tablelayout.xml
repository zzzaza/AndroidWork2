<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#666666"
        android:text="Hello TableLayout"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="10dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:text="Open..."
                android:padding="5dp"/>
            <TextView
                android:text="Ctrl-O"
                android:gravity="right"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:text="Save..."
                android:padding="5dp"/>
            <TextView
                android:text="Ctrl-S"
                android:gravity="right"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:text="Save As..."
                android:padding="5dp"/>
            <TextView
                android:text="Ctrl-Shift-S"
                android:gravity="right"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:text="Import..."
                android:padding="5dp"/>
            <TextView
                android:text="Ctrl-E"
                android:gravity="right"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:text="Export..."
                android:padding="5dp"/>
            <TextView
                android:text="Ctrl-X"
                android:gravity="right"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:text="Quit"
                android:padding="5dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>