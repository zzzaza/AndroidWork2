<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 内阴影部分 -->
    <item>
        <inset>
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <gradient
                    android:startColor="#424242"
                android:endColor="#A9A9A9"
                android:angle="270" />
            </shape>
        </inset>
    </item>
    <!-- 内容部分 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- 内部背景颜色 -->
            <stroke android:width="2dp" android:color="#2E000000"/> <!-- 边框颜色 -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>